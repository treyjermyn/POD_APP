  <!-- hero content -->
    <div class="lessons-hero homepage-hero middle-content-section">
        <div class="hero-content-section roster-hero">
            <h1>Student Roster</h1>
            <p class="subheader">View and management student enrollment.</p>
            <a href="#"><button class="button large hero-button" data-open="student-Modal" id="add_Student">Add New Student</button></a>
